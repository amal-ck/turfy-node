<section>
   <div class="container mt-5 ">
      <div class="row">
         {{#each turf}}
         <div class="col-md-4 col-6 p-3">
            <div class="card text-center" style="height: 23rem; width:20rem ">
               <img class="card-img-top" src="/turf-images/{{this._id}}.jpg" height="250rem"
                  alt="Card image cap">
               <div class="card-body">
                  <h5 class="card-title">{{this.Tname}}</h5>
                  <p class="card-text"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                        fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                        <path
                           d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                        <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                     </svg>{{this.City}}</p>
                  <a href="/book-turf/{{this._id}}" class="btn btn-success">Book Now</a>
               </div>
            </div>
         </div>
         {{/each}}
      </div>
   </div>
</section>

<style>
   .card {
      border-color: greenyellow;
      border-style: ridge;
   }
</style>
